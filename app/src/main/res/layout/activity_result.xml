<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7D679"
    tools:context="com.example.ayoub.mygamev2app.tn.example.ayoub.mygamev2app.ResultActivity">

    <TextView
        android:id="@+id/textView3"
        style="@style/result_label"
        android:text="@string/lose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/play_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="@dimen/result_home_size"
        android:layout_height="@dimen/result_home_size"
        android:onClick="buHome"
        android:background="@drawable/home"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintHorizontal_bias="0.7" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="@dimen/result_next_size"
        android:layout_height="@dimen/result_next_size"
        android:background = "@android:drawable/ic_media_play"
        android:layout_marginRight="8dp"
        android:onClick="buNext"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintHorizontal_bias="0.301"
        tools:layout_editor_absoluteY="271dp" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2577865107580434/5532525065"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginBottom="2dp"
        ads:layout_constraintBottom_toBottomOf="parent">

    </com.google.android.gms.ads.AdView>
</android.support.constraint.ConstraintLayout>
